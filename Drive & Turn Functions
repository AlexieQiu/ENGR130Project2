from microbit import *
import robotbit_library as r

M1A = 0x1
M1B = 0x2
M2A = 0x3
M2B = 0x4

r.setup()

def forward_1():
    sleep(1000)
    r.motor(M2B, 81)
    r.motor(M1A, -90)
    sleep(730)
    r.motor(M2B, 0)
    r.motor(M1A, 0)

def turn_left():
    sleep(1000)
    r.motor(M2B, -45)
    r.motor(M1A, -45)
    sleep(400)
    r.motor(M2B, 0)
    r.motor(M1A, 0)

def turn_right():
    sleep(1000)
    r.motor(M2B, 45)
    r.motor(M1A, 45)
    sleep(400)
    r.motor(M2B, 0)
    r.motor(M1A, 0)
